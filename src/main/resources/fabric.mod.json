{
  "schemaVersion": 1,
  "id": "itemcounts",
  "version": "${version}",

  "name": "Item Counts",
  "description": "Adds the total amount of items in your inventory to the hotbar.",
  "authors": [
    "BlazingTwist"
  ],
  "contact": {
    "homepage": "https://github.com/BlazingTwist",
    "sources": "https://github.com/BlazingTwist/ItemCounts"
  },

  "license": "Apache-2.0",
  "icon": "assets/itemcounts/icon.png",

  "environment": "*",
  "entrypoints": {
    "client": [
      "blazingtwist.itemcounts.ItemCounts"
    ],
    "modmenu": [
      "blazingtwist.itemcounts.ItemCountsModMenuImpl"
    ]
  },
  "mixins": [
    "itemcounts.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.17",
    "fabric": "*",
    "minecraft": "~1.19.4",
    "java": ">=17"
  },
  "suggests": {
    "fabric": "*"
  },
  "custom": {
    "modmenu:clientsideOnly": true
  }
}
